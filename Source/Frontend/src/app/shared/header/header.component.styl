@import '../../../core/styl/utils.styl'

[data-component='header']
	z-index 10
	position fixed
	top 0
	left 0
	width 100%
	background-color white
	.holder
		padding 0
		box-shadow $bs-header
		font-size 0
		max-height 50px
		.left-content
			width 30%
			display inline-block
			text-align left
			vertical-align top
			padding-left 50px
			+breakpoint( tablet )
				width 100%
				display block
			> a
				font-size 0
			.logo
				display inline-block
				margin 15px 0
				width 120px
				height 20px
				background-size cover
			.menu-mobile
				width 25px
				height 20px
				position absolute
				margin 0
				transform rotate( 0deg )
				transition .5s ease-in-out
				cursor pointer
				top 50%
				right 20px
				transform translateY( -50% )
				display none
				+breakpoint( tablet )
					display block
				&.opened
					span
						&:nth-child(1)
							top 8px
							width 0
							left 50%
						&:nth-child(2)
							transform rotate( 45deg )
						&:nth-child(3)
							transform rotate( -45deg )
						&:nth-child(4)
							top 8px
							width 0
							left 50%
				span
					display block
					position absolute
					height 3px
					width 100%
					background $secondary
					opacity 1
					left 0
					transform rotate( 0deg )
					transition .25s ease-in-out
					&:nth-child(1)
						top 0
					&:nth-child(2),
					&:nth-child(3)
						top 8px
					&:nth-child(4)
						top 16px
						width 20px

		.right-content
			width 70%
			display inline-block
			text-align right
			vertical-align top
			+breakpoint( tablet )
				display none
			.btn-logout
				background transparent
				border 0
				padding 0 20px
				height 50px
				border-left 1px solid $contrast-grey
				> span
					vertical-align middle
					font-family $primary-font
					font-size 12px
					font-weight 500
					text-align center
					color $secondary
					margin-right 5px
				> i
					vertical-align middle
					font-size 14px
					color $secondary
			[data-component='notifications']
				display inline-block
				.notification
					margin 0 22px
					vertical-align middle
