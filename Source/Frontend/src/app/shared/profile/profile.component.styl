@import '../../../core/styl/utils.styl'

[data-component="profile"]
	display inline-block
	.btn-dropdown
		padding 0 20px
		height 50px
		vertical-align middle
		background $contrast-grey
		border 0
		display inline-block
		.data-user
			vertical-align middle
			display inline-block
			.name
				font-family $primary-font
				font-size 12px
				font-weight 500
				text-align left
				display block
				color $secondary
			.account-number
				font-family $secondary-font
				font-size 10px
				text-align left
				display block
				color $secondary
		.arrow
			font-size 30px
			color $secondary
			display inline-block
			vertical-align middle
			margin-left 15px
